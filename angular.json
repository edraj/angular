{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "dmartweb": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "less"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "dm",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist",
            "browser": "src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "less",
            "stylePreprocessorOptions": {
              "includePaths": [
                "./rawless/less",
                "./node_modules/shut/src/less"
              ]
            },
            "scripts": [
              {
                "input": "src/assets/js/dmart.js",
                "bundleName": "dmart"
              }
            ]
          },
          "configurations": {
            "serve": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true,
              "aot": true,
              "index": "src/index.dev.html",
              "styles": [
                {
                  "input": "src/assets/css/dmart.css",
                  "bundleName": "styles"
                }
              ],
              "assets": [
                {
                  "glob": "favicon.ico",
                  "input": "src",
                  "output": "/"
                },
                {
                  "glob": "images/**/*",
                  "input": "src/assets",
                  "output": "/assets"
                },
                {
                  "glob": "*.js",
                  "input": "src/locale",
                  "output": "/locale"
                },
                {
                  "glob": "*.json",
                  "input": "configs",
                  "output": "/localdata"
                },
                {
                  "glob": "*(ar-JO|en).js",
                  "input": "node_modules/@angular/common/locales/global",
                  "output": "/locale"
                }
              ]
            },
            "production": {
              "index": "src/placeholder.html",
              "outputPath": "../host/client/",
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": {
                "scripts": true,
                "fonts": false,
                "styles": true
              },
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "deleteOutputPath": true,
              "assets": [
                {
                  "glob": "favicon.ico",
                  "input": "src",
                  "output": "/"
                },
                {
                  "glob": "images/**/*",
                  "input": "src/assets",
                  "output": "/assets"
                },
                {
                  "glob": "*.js",
                  "input": "src/locale",
                  "output": "/locale"
                },
                {
                  "glob": "*(ar-JO|en).js",
                  "input": "node_modules/@angular/common/locales/global",
                  "output": "/locale"
                }
              ],
              "styles": [
                {
                  "input": "src/assets/css/dmart.css",
                  "bundleName": "styles",
                  "inject": false
                },
                {
                  "input": "src/assets/css/dmart.rtl.css",
                  "bundleName": "styles.rtl",
                  "inject": false
                }

              ],
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kB",
                  "maximumError": "4kB"
                }
              ]
            },
            "vercel": {
              "index": {
                "input": "src/index.dev.html",
                "output": "index.html"
              },
              "outputPath": {
                "base": "../deploy/client/",
                "browser": ""
              },
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": {
                "scripts": true,
                "fonts": false,
                "styles": true
              },
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "deleteOutputPath": true,
              "assets": [
                {
                  "glob": "favicon.ico",
                  "input": "src",
                  "output": "/"
                },
                {
                  "glob": "images/**/*",
                  "input": "src/assets",
                  "output": "/assets"
                },
                {
                  "glob": "*.js",
                  "input": "src/locale",
                  "output": "/locale"
                },
                {
                  "glob": "en.js",
                  "input": "node_modules/@angular/common/locales/global",
                  "output": "/locale"
                },
                {
                  "glob": "config.prod.json",
                  "input": "configs",
                  "output": "/localdata"
                }
              ],
              "styles": [
                {
                  "input": "src/assets/css/dmart.css",
                  "bundleName": "styles",
                  "inject": true
                }
              ],
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kB",
                  "maximumError": "4kB"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "dmartweb:build:serveProduction"
            },
            "development": {
              "buildTarget": "dmartweb:build:serve"
            }
          },
          "defaultConfiguration": "development"
        }
      }
    }
  }
}
